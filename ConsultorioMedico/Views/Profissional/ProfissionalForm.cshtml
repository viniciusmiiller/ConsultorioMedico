@model ConsultorioMedico.ViewModels.ProfissionalFormViewModel
@{
    ViewBag.Title = Model.Title;
}

<div class="row">
    <div class="col col-md-6 col-md-offset-3">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm("Save", "Profissional"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "Please fix the following errors.")
            <div class="form-group">
                @Html.LabelFor(m => m.Profissional.Nome)
                @Html.TextBoxFor(m => m.Profissional.Nome, new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Profissional.Nome)
            </div>

            @Html.HiddenFor(m => m.Profissional.Id)
            <button type="submit" class="btn btn-sm btn-primary">Salvar</button>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
