@model ConsultorioMedico.ViewModels.PacienteFormViewModel
@{
    ViewBag.Title = Model.Title;
}

<div class="row">
    <div class="col col-md-6 col-md-offset-3">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm("Save", "Paciente"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "Please fix the following errors.")
            <div class="form-group">
                @Html.LabelFor(m => m.Paciente.Nome)
                @Html.TextBoxFor(m => m.Paciente.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Paciente.Nome)
            </div>
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.Paciente.IsSub) Assinar a NewsLetter
                </label>
            </div>

            @Html.HiddenFor(m => m.Paciente.Id)
            <button type="submit" class="btn btn-sm btn-primary">Salvar</button>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}